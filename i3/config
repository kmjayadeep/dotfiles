# Command for the status line
#   ie: i3blocks, i3status
set $statuscmd i3status

# Signal used to update the status line
#   i3blocks uses SIGRTMIN+10 by default
#   i3status uses SIGUSR1 by default
set $statussig SIGUSR1

# Volume bindings
bindsym Mod4+comma exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym Mod4+period exec pactl set-sink-volume @DEFAULT_SINK@ +5%

# screenshot
bindsym --release Print exec scrot -e 'mv $f ~/Pictures/Screenshots' # && notify-send 'Screenshot saved'
bindsym --release Shift+Print exec scrot -s -d 2 -e 'mv $f ~/Pictures/Screenshots' && notify-send 'Screenshot saved'

# dunst bindings
